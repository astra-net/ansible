Version = "2.1.0"

[BLSKeys]
  KMSConfigFile = ""
  KMSConfigSrcType = "shared"
  KMSEnabled = false
  KeyDir = "./.hmy/blskeys"
  KeyFiles = []
  MaxKeys = 10
  PassEnabled = true
  PassFile = ""
  PassSrcType = "auto"
  SavePassphrase = false

[DNSSync]
  Client = true
  LegacySyncing = false
  Port = 6000
  Server = true
  ServerPort = 6000
  Zone = "t.hmny.io"

[General]
  DataDir = "./data"
  IsArchival = {{ archival }}
  IsBeaconArchival = false
  IsOffline = false
  NoStaking = true
{% if node_type_var == "Explorer" %}
  NodeType = "explorer"
  ShardID = {{ shard }}
{% else %}
  NodeType = "validator"
  ShardID = -1
{% endif %}

[HTTP]
  Enabled = true
  IP = "0.0.0.0"
  Port = 9500
{% if node_type_var == "Explorer" %}
  RosettaEnabled = true
{% else %}
  RosettaEnabled = false
{% endif %}
  RosettaPort = 9700

[Log]
  FileName = "harmony.log"
  Folder = "./latest"
  RotateSize = 100
  Verbosity = 3

  [Log.VerbosePrints]
    Config = false

[Network]
  BootNodes = ["/dnsaddr/bootstrap.t.hmny.io"]
  NetworkType = "mainnet"

[P2P]
  IP = "0.0.0.0"
  KeyFile = "./.hmykey"
  Port = 9000

[Pprof]
  Enabled = true
  ListenAddr = "0.0.0.0:6060"

[RPCOpt]
  DebugEnabled = false
  RateLimterEnabled = true
  RequestsPerSecond = 1000

[Sync]
  Concurrency = 6
  DiscBatch = 8
  DiscHardLowCap = 6
  DiscHighCap = 128
  DiscSoftLowCap = 8
  Downloader = false
  Enabled = false
  InitStreams = 8
  MinPeers = 6

[TxPool]
  BlacklistFile = "./.hmy/blacklist.txt"

[WS]
  Enabled = true
{% if node_type_var == "Explorer" %}
  IP = "0.0.0.0"
{% else %}
  IP = "127.0.0.1"
{% endif %}
  Port = 9800

